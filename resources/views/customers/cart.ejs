<section class="cart py-16">
    <% if(session.cart) { %>
        <div style="background: rgba( 255, 255, 255, 0.25 );
    box-shadow: 0 8px 32px 0 rgba( 31, 38, 135, 0.37 );
    backdrop-filter: blur( 4px );
    -webkit-backdrop-filter: blur( 4px );
    border-radius: 10px;
    border: 1px solid rgba( 255, 255, 255, 0.18 );" class="order p-4 container mx-auto xl:w-1/2">
            <div class="flex items-center border-b border-gray-300 pb-4">
                <img src="img/cart-black.png" alt="">
                <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
            </div>
            <div class="pizza-list">
                <% for(let pizza of Object.values(session.cart.items)) { %>
                <div class="cart-items">
                    <div class="cart-items-flex-o">
                        <div class="cart-i-i-d">
                            <div class="image-cart-f">
                                <img src="/img/<%= pizza.item.image %>" alt="">
                            </div>
                            <div class="cart-d">
                                <div class="cart-infos">
                                    <span><%= pizza.item.name %></span>
                                </div>
                                <div class="cart-infos">
                                    <span><%= pizza.item.isVeg %></span>
                                </div>
                            </div>
                        </div>
                        <div class="rollscroll-items">
                            <button class="add-to-cart"  data-pizza="<%=JSON.stringify(pizza)%>"> <span> + </span> </button>
                            <div class="pcs-items">
                                <%= pizza.qty %> Pcs
                            </div>
                            <button class="remove-to-cart" data-pizza="<%=JSON.stringify(pizza)%>"> <span> - </span> </button>
                        </div>
                        <div class="cart-price">
                            <span>â‚¹ <%= pizza.item.price * pizza.qty %></span>
                        </div>

                    </div>

                    <div class="responsive-info">
                        <div class="cart-r">
                            <div class="cart-infos">
                                <span><%= pizza.item.name %></span>
                            </div>
                            <div class="cart-infos">
                                <span><%= pizza.item.isVeg %></span>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
                <hr>
            </div>
            <div class="text-right py-4">
                <div>
                    <span class="text-lg font-bold">Total Amount</span>
                    <span class="amount text-2xl font-bold ml-2">â‚¹<%= session.cart.totalPrice %></span>
                </div>

                <% if(user) { %>
                    <div>
                        <form action="/orders" method="POST" class="mt-12" id="payment-form">
                            <div class="relative w-1/2 ml-auto mb-4">
                                <select id="paymentType" name="paymentType"
                                    class="block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded leading-tight focus:outline-none focus:shadow-outline">
                                    <option value="cod">Cash on delivery</option>
                                    <option value="card">Pay with card</option>
                                </select>
                                <div
                                    class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                                    <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg"
                                        viewBox="0 0 20 20">
                                        <path
                                            d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z" />
                                    </svg>
                                </div>
                            </div>
                            <input name="phone" class="border border-gray-400 p-2 w-1/2 mb-4" type="text"
                                placeholder="Phone number">
                            <input name="address" class="border border-gray-400 p-2 w-1/2" type="text"
                                placeholder="Address">
                            <div class="mt-4">
                                <div id="card-element"></div>
                                <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6"
                                    type="submit">Order Now</button>
                            </div>
                        </form>
                    </div>
                    <% } else { %>
                        <a href="/login"
                            class="inline-block cursor-pointer btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">LOGIN
                            TO CONTINUE</a>
                        <% } %>
            </div>
        </div>



        </div>

        <% } else { %>
            <div class="empty-cart py-16">
                <div class="container mx-auto text-center">
                    <h1 class="text-3xl font-bold mb-2"> Cart Empty ðŸ˜”</h1>
                    <p class="text-gray-500 text-lg mb-12"> you probably haven't ordered food yet.<br>
                        to order food, go to main page</p>
                    <img class="w-2/5 mx-auto" src="/img/empty-cart.png" alt="empty-cart">
                    <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Go
                        Back</a>
                    <br>
                    <a href="customers/orders"
                        class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Track your
                        order</a>
                    <h5 class="mt-5 font-bold">If you already placed the order ... track it now</h5>
                </div>
            </div>
            <% } %>
</section>