
<section class="pb-10" style="background: var(--pure);">
    <div class="md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4" id="msg-flex">
        <% if(getMsg.length) { %>
        <% getMsg.forEach(function (msg){ %>
    <div class="gap-6 pt-10 px-6 w-1/2 msg-block" style="position: relative;">
        <span class="date_and_time" style="position: absolute; right:35px; font-size: 15px;"><%= moment(msg.receivedAt).format('LL'); %></span>
    <div class="antialiased text-white p-8 rounded-lg" style=" 
     background: var(--footer); color: var(--black);">
    <div class="relative z-10 flex justify-start space-x-4">
        <div class="username">
            <div id="profileImage" style="
            width: 100%;
    background: #FE5F1E;
    padding: 10px;
    /* margin: 0px; */
    text-align: center;
    padding-left: 15px;
    border-radius: 50%;
    padding-right: 15px;
    font-size: 15px;
    text-transform: capitalize;
        ">
              <%=msg.name.substring(0,1) %>
            </div>
        </div>
        <div>
            <h2 id="firstname" class="font-bold text-sm"> Name :  <%=msg.name %></h2>
            <h2 class="font-bold text-sm"> Email : <%=msg.email %></h2>
            <h2 class="font-bold text-sm">Customer ID : <%=msg.customerId %></h2>
        </div>
    </div>
    <p class="relative z-10 mt-4 font-bold text-xl leading-tight">
        Message : <%= msg.customerMessage %>
       <% if(msg.orderId != 'false') { %>
       <br>
       <br>
        Order Id : <%= msg.orderId %>
       <% } %>
    </p>
    <p class="relative z-10 mt-4 text-lg opacity-85">
        <% if(msg.adminMessage != 'false') { %>
        Your Response: <%= msg.adminMessage %>
        <% } else { %> <div class="login-content">
            <form action="/admin/messages/<%= msg._id %>" class="" method="POST" autocomplete="off">
                <div class="input-div pass">
                    <div class="i">
                        <i class="fas fa-comment-dots"></i>
                    </div>
                    <input type="text" name="id" value="<%= msg._id %>" hidden>
                    <div class="div">
                        <h5 style="color: var(--black);">Type Message Here...</h5>
                        <input class="input" type="text" name="admessage" id="message">
                    </div>
                </div>
                <input type="submit" class="btn" value="Send">
            </form>
        </div> <% } %>
        
    </p>
    </div>
    </div>
    <% }) %><% } else { %>
        <div style="    padding-top: 8rem; padding-bottom: 8rem; padding-left: 5rem; padding-right: 5rem;">
            <h2 class="footer__logo__des">No Messages Available!</h2>
        </div>
        <% } %>
        </div>
        <script>

            const inputs = document.querySelectorAll(".input");
            
            
            function addcl() {
                let parent = this.parentNode.parentNode;
                parent.classList.add("focus");
            }
            
            function remcl() {
                let parent = this.parentNode.parentNode;
                if (this.value == "") {
                    parent.classList.remove("focus");
                }
            }
            
            
            inputs.forEach(input => {
                input.addEventListener("focus", addcl);
                input.addEventListener("blur", remcl);
            });
            
                </script>
                <script>
                    if ( window.history.replaceState ) {
                        window.history.replaceState( null, null, window.location.href );
                    }
                </script>
</section>
